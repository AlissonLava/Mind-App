<% if content.errors.any? %>
    <%= content.errors.full_messages.join(', ')%>
<% end %>
<%= form_with(:model content, local: true) do |form|%>
    <div class='field'>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class='field'>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div class='field'>
        <%= form.label :tags %>
        <%= form.select :tags, optios_for_select(current_user.tags.pluck(:name), content.tags.pluck(:name)), {}, { class: 'select2', multiple: 'multiple', style: 'width: 50%'} %>
    </div>


    <div class = 'actions'>
        <%= form.submit%>
    </div>
<% end %>